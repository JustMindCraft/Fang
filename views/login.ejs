<% include ./layouts/frontend_header %>
<style>
    .login-form-center{
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        justify-items: center;
        align-items: center;
    }
    .login-container{
        text-align: center;
        max-width: 500px;
        top: -125px;
        position: relative;
    }
    .main-container{
        background-color: bisque;
    }
</style>

<div class="container login-container">
        <div class="row">
            
            <div class="col s12 flow-text login-form-center">
                <img style="width: 100px;" src="https://res.cloudinary.com/da7efhqvt/image/upload/v1541724181/zhengjue/icon_logos/6bb78edb-3a5f-4137-a380-0b66c79ccef7.png" alt="">
                登录您的正觉账号
            </div>
            <form action="/login" method="POST" class="col s12 flow-text">
                <div class="row">
                       
                        <div class="row">
                                <div class="input-field col s12">
                                  <input id="email" type="text" name="userparams" class="validate">
                                  <label for="email">电子邮箱|用户名</label>
                                </div>
                        </div>
                        <div class="row">
                                <div class="input-field col s12">
                                  <input id="password" type="password" name="password" class="validate">
                                  <label for="password">密码</label>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col s6"><Button type="submit" class="waves-effect waves-light btn-large red darken-1">登录</Button></div>
                                <div class="col s6"><a href="/reg" class="waves-effect waves-light btn-large blue lighten-1">注册</a></div>
                        </div>
                       
                </div>
               
            </form>
               
               
        </div>

</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        if("<%=msg %>"!== ''){
            M.toast({html: '<%=msg %>'});

        }else{
            return false;
        }
    });

</script>



